<div class="space-y-8">
    <div class="space-y-2">
        <div class="flex justify-start items-center">
            <h2 class="text-white text-xl font-bold">This Season</h2>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-8 gap-4">
            <% data.forEach((i)=> { %>
                <a href="/info/<%= i.id %>" class="group space-y-1">
                    <img src="<%= i.cover %>" alt="<%= i.title %>" title="<%= i.title %>"
                        class="w-full h-52 rounded-sm object-cover group-hover:scale-95">
                    <p class="text-white text-base font-medium truncate group-hover:text-violet-600">
                        <%= i.title %>
                    </p>
                    <p class="text-white/50 text-sm font-medium">
                        <%= i.released %>
                    </p>
                </a>
                <% }) %>
        </div>
    </div>
    <div class="flex justify-center items-center gap-4">
        <% if (pagination.currentPage> 1) { %>
            <a href="/season/this/<%= pagination.currentPage - 1 %>" class="bg-violet-600 text-white text-base 
                text-center w-24 rounded-sm py-1 hover:scale-95">Previous</a>
            <% } else { %>
                <button type="button" class="bg-zinc-700 text-white text-base text-center 
                    w-24 rounded-sm cursor-not-allowed py-1">Previous</button>
                <% } %>
                    <p class="text-white text-base font-medium">Page <%= pagination.currentPage %>
                    </p>
                    <% if (pagination.hasNext) { %>
                        <a href="/season/this/<%= pagination.currentPage + 1 %>" class="bg-violet-600 text-white 
                            text-base text-center w-24 rounded-sm py-1 hover:scale-95">Next</a>
                        <% } else { %>
                            <button type="button" class="bg-zinc-700 text-white text-base text-center 
                                w-24 rounded-sm cursor-not-allowed py-1">Next</button>
                            <% } %>
    </div>
</div>